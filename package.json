{
  "name": "node-microservice-laravel-compatible",
  "version": "1.0.0",
  "description": "Node.js microservice compatible with Laravel Passport authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --legacy-watch --watch src --exec ts-node src/index.ts",
    "setup:oauth": "ts-node setup-oauth-client.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/InitSchema -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
    "deploy": "npm run build && git add dist/ && git commit -m 'Build for deployment' && git push",
    "seed": "ts-node src/scripts/runSeeders.ts",
    "seed:properties": "ts-node src/seeders/PropertySeeder.ts",
    "seed:all": "ts-node src/scripts/runSeeders.ts all",
    "seed:essential": "ts-node src/scripts/runSeeders.ts essential",
    "seed:admin": "ts-node src/scripts/runSeeders.ts admin",
    "seed:roles": "ts-node src/scripts/runSeeders.ts roles",
    "seed:catalogs": "ts-node src/scripts/runSeeders.ts catalogs",
    "seed:oauth": "ts-node src/scripts/runSeeders.ts oauth",
    "seed:demo": "ts-node src/scripts/runSeeders.ts demo",
    "seed:help": "ts-node src/scripts/runSeeders.ts help",
    "schema:drop": "npm run typeorm -- schema:drop -d src/config/database.ts",
    "reset-db": "npm run schema:drop && npm run migration:run && npm run seed",
    "fresh-start": "npm run reset-db && npm run dev",
    "identify:localfile": "ts-node src/scripts/identifyLocalFiles.ts"

  },
  "keywords": [
    "nodejs",
    "typescript",
    "microservice",
    "jwt",
    "mysql",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^164.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "tsconfig-paths": "^4.2.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.18",
    "@types/qrcode": "^1.5.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
